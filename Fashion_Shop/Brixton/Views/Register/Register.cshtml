

@model Brixton.Models.AccountModel
@{
    Brixton.Models.PRJ301_SE1705Context context = new Brixton.Models.PRJ301_SE1705Context();
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Sign Up Page</title>
    <link href="~/css/register.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Eczar', serif;
            background-color: #c3c3c3;
        }

        .modal {
            background-image: url('/img/328139380_719226636268716_1458668456977625910_n.jpg')
        }

        .modal-content {
            border-radius: 20px;
            border: none;
        }

        input {
            background-color: #eae8e8;
        }

        .modal {
            background-color: #777674;
        }
    </style>
</head>
<body>
    <div class="modal">
        @using (Html.BeginForm("Register", "Register", FormMethod.Post, new { @class = "modal-content" }))
        {
            <div class="container2">
                <h1 style="text-align: center">Sign Up</h1>
                <p>@ViewBag.exit</p>
                <label for="name"><b>Name</b></label>
                @Html.TextBoxFor(model => model.UserName, new { placeholder = "Enter Full Name" })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                <br>
                <label for="phone"><b>Phone</b></label>
                @Html.TextBoxFor(model => model.UserPhone, new { placeholder = "Enter Phone" })
                @Html.ValidationMessageFor(model => model.UserPhone, "", new { @class = "text-danger" })
                <br>
                <label for="address"><b>Address</b></label>
                @Html.TextBoxFor(model => model.UserAddress, new { placeholder = "Enter Addres" })
                @Html.ValidationMessageFor(model => model.UserAddress, "", new { @class = "text-danger" })
                <br>
                <label for="id"><b>Username</b></label>
                @Html.TextBoxFor(model => model.AccId, new { placeholder = "Enter Username" })
                @Html.ValidationMessageFor(model => model.AccId, "", new { @class = "text-danger" })
                <br>
                <label for="psw"><b>Password</b></label>
                @Html.PasswordFor(model => model.AccPass, new { placeholder = "Enter Password" })
                @Html.ValidationMessageFor(model => model.AccPass, "", new { @class = "text-danger" })
                <br>
                <select id="country" name="quesId" style="margin: 10px; height: 25px; font-weight: bolder">
                    @foreach(var ques in context.SecurityQuestionHe161048s.ToList())
                    {
                        <option value="@ques.QuesId">@ques.Question</option>
                    }
                </select>
                <br>

                <label for="answer"><b>Answer</b></label>
                @Html.TextBoxFor(model => model.Answer, new { placeholder = "Enter Answer" })
                @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
                <div class="clearfix">
                    <button type="button" class="cancelbtn"> <a href="@Url.Action("Login","Login")" style="text-decoration: none; color: black">Back</a><!-- comment --></button>
                    <button type="submit" class="signup" style="width: 50%; background-color: #000; color: white">Sign Up</button>
                </div>
            </div>
        }
        
    </div>

</body>
</html>